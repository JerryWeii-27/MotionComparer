<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory android:title="Settings (Require Restart)">

        <ListPreference
            app:defaultValue="pose_landmarker_lite.task"
            app:dialogTitle="Select model"
            app:entries="@array/model_options"
            app:entryValues="@array/model_names"
            app:key="model"
            app:summary="Click to choose"
            app:title="Pose recognition model" />

        <SeekBarPreference
            android:layout="@layout/preference_seekbar_custom"
            android:max="150"
            app:defaultValue="50"
            app:key="interval"
            app:min="1"
            app:showSeekBarValue="true"
            app:summary="Sampling stride of the pose recognition model"
            app:title="Sample interval" />

        <SwitchPreferenceCompat
            app:defaultValue="false"
            app:key="useGPU"
            app:summary="Delegate pose recognition to GPU when turned on"
            app:title="Use GPU" />


    </PreferenceCategory>


    <PreferenceCategory android:title="Settings (Don't Require Restart)">
<!--        <SwitchPreferenceCompat-->
<!--            app:defaultValue="true"-->
<!--            app:key="forceSameAspect"-->
<!--            app:summary="When turned on, two videos must have the same aspect ratio."-->
<!--            app:title="Force same aspect ratio" />-->

        <EditTextPreference
            app:defaultValue="0"
            app:dialogMessage="This affects bone colors."
            app:dialogTitle="Enter a integer seed"
            app:key="colorSeed"
            app:summary="Click to change."
            app:title="Bone Color Seed" />

        <SwitchPreferenceCompat
            app:defaultValue="true"
            app:key="sameColor"
            app:summary="When turned on, two skeletons will have same color scheme."
            app:title="Use same color scheme" />

        <ListPreference
            app:defaultValue="Default"
            app:dialogTitle="Select render order"
            app:entries="@array/render_order"
            app:entryValues="@array/render_order"
            app:key="renderOrder"
            app:summary="Click to choose."
            app:title="Render order of bones." />



    </PreferenceCategory>
</PreferenceScreen>
