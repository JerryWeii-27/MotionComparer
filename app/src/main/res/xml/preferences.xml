<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory android:title="Settings (Require Restart)">

        <ListPreference
            app:defaultValue="pose_landmarker_lite.task"
            app:dialogTitle="Select model"
            app:entries="@array/model_options"
            app:entryValues="@array/model_names"
            app:key="model"
            app:summary="Click to choose"
            app:title="Pose recognition model" />

        <SeekBarPreference
            android:max="60"
            app:defaultValue="50"
            app:key="interval"
            app:min="1"
            app:summary="Sampling stride of the pose recognition model"
            app:title="Sample interval"
            app:showSeekBarValue="true"
            android:layout="@layout/preference_seekbar_custom"/>

        <SwitchPreferenceCompat
            app:key="useGPU"
            app:defaultValue="false"
            app:title="Use GPU"
            app:summary="Delegate pose recognition to GPU when turned on"

            />


    </PreferenceCategory>
</PreferenceScreen>
